{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
    {% for cat in menu if cat.mnu_url == "Certificado" %}
        {% if cat.rol_insert == 1 %}
            <div class="panel panel-primary">
                <div class="panel-heading" style="background: #3c8dbc">
                    <h2 align="center" style="color: white;">Nuevo Certificado</h2>
                </div>
                <div class="panel-body">
                    <br>
                    <form id="frmCertificado" class="col-lg-6 col-lg-offset-3">
                        <div class="btn-group btn-group-justified btn-group-raised">
                            <a href="{{ path('Certificado') }}" class="btn btn-raised btn-primary"><span class="fa fa-arrow-circle-left"></span><span class="hidden-xs"> Regresar</span></a>
                            <a id="Limpiar" class="btn btn-raised btn-primary"><span class="glyphicon glyphicon-erase"></span><span class="hidden-xs"> Limpiar</span></a>
                        </div>
                        <br>
                        
                        <div class="form-group">
                            <label for="rs">Razón social:</label>
                            <select id="rs" name="rs" class="form-control selectpicker" data-live-search="true">
                                <option value="">-- Seleccione --</option>
                                {% for cliente in clientes %}
                                    <option value="{{ cliente.id_cliente }}">{{ cliente.razonsocial }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="pwd">Contraseña:</label>
                            <input type="password" id="pwd" name="pwd" class="form-control" placeholder="Contraseña"/>
                        </div>
                        
                        <div class="form-group" id="files">
                            <label for="archivos"> Archivos:</label>
                            <div class="file-loading">
                                <input id="input-fa-1" name="input-fa-1[]" type="file" class="form-control" multiple/>
                            </div>
                        </div>
                        
                        <br>
                        
                        <div class="form-group" align="center">
                            <button id="Guardar" class="btn btn-block btn-raised btn-primary"><span class="fa fa-floppy-o"></span><span class="hidden-xs"> Guardar</span></button>
                        </div>
                        
                        <div class="form-group" align="center">
                            <button id="ResetTimer" class="btn btn-block btn-raised btn-primary"><span class="fa fa-floppy-o"></span><span class="hidden-xs"> R</span></button>
                        </div>
                    </form>
                </div>
            </div>
        {% else %}
            {% include 'FacelecBundle:Default:Alerta1.html.twig' %}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/app_js/Utilerias_AgregarCertificado.js') }}"></script>
{% endblock %}