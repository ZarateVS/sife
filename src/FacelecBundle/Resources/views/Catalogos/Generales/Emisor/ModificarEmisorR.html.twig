{% block contenido %}
    <div class="">
        <div class="panel panel-primary">
            <div class="panel-heading" style="background: #3c8dbc">
                <h2 align="center" style="color: white;">Actualizar Emisor</h2>
            </div>
            
            <div class="panel-body">
                <div class="btn-group btn-group-justified btn-group-raised">
                    <a href="{{ path('Emisor') }}" class="btn btn-raised btn-primary"><span class="fa fa-undo"></span><span class="hidden-xs"> Regresar</span></a>
                    <a href="{{ path('Inicio') }}" class="btn btn-raised btn-primary"><span class="glyphicon glyphicon-home"></span><span class="hidden-xs"> Inicio</span></a>
                </div>
                <br>
                <form id="frmEmisor">
                    {% for cliente in clientes %}
                    <table class="table table-responsive">
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="reg_fiscal">*Regimen fiscal:</label>
                                    <select class="form-control" name="reg_fiscal" id="reg_fiscal">
                                        <option value="">-- Seleccione --</option>
                                        {% for reg in regs %}
                                            {% if cliente.regimenFiscal == reg.regimenFiscal %}
                                                <option value="{{ reg.regimenFiscal }}" selected>{{ reg.descripcion }}</option>
                                            {% else %}
                                                <option value="{{ reg.regimenFiscal }}">{{ reg.descripcion }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    <input type="hidden" id="id_cliente" name="id_cliente"  value="{{ cliente.id_cliente }}"/>
                                    <!--<div id="error1" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                {% set checked_f = "unchecked" %}
                                {% set checked_m = "unchecked" %}
                                {% if cliente.tipoPer == 0 %}
                                    {% set checked_m = "checked" %}
                                {% else %}
                                    {% set checked_f = "checked" %}
                                {% endif %}
                                <label>*Tipo Persona:</label>
                                <div class="form-group">
                                    <div style="display:inline-block;">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="radio" name="tipo_p" id="tipo_p" value="1" {{ checked_f }}> Fisica
                                        </label>
                                    </div>
                                    <div class="col-md-offset-4" style="display:inline-block;">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="radio" name="tipo_p" id="tipo_p" value="0" {{ checked_m }}> Moral
                                        </label>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="rfc">*RFC:</label>
                                    <input type="text" id="rfc" name="rfc" class="form-control" placeholder="RFC" onkeypress="" value="{{ cliente.rfc }}"/>
                                    <!--<div id="error2" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="rs">*Nombre o Razon Social:</label>
                                    <input type="text" id="rs" name="rs" class="form-control" placeholder="Nombre o Razon Social" value="{{ cliente.razonsocial }}"/>
                                    <!--<div id="error3" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="correo">*Correo Electronico Empresa:</label>
                                    <input type="text" id="correo" name="correo" class="form-control" placeholder="correo@dominio.com" value="{{ cliente.correoE }}"/>
                                    <!--<div id="error4" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="telefono">Telefono:</label>
                                    <input type="text" id="telefono" name="telefono" class="form-control" placeholder="Telefono" onkeypress="" value="{{ cliente.telefono1 }}"/>
                                    <!--<div id="error5" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                        </tr>
                        <tr>    
                            <td>
                                <div class="form-group">
                                    <label for="calle">*Calle:</label>
                                    <input type="text" id="calle" name="calle" class="form-control" placeholder="Calle" value="{{ cliente.calle }}"/>
                                    <!--<div id="error6" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="num_ext">*Numero Ext:</label>
                                    <input type="text" id="num_ext" name="num_ext" class="form-control" placeholder="Numero exterior" value="{{ cliente.numExt }}"/>
                                    <!--<div id="error7" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="num_int">Numero Int:</label>
                                    <input type="text" id="num_int" name="num_int" class="form-control" placeholder="Numero interior" value="{{ cliente.numInt }}"/>
                                    <!--<div id="error8" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label for="cp">*Codigo postal:</label>
                                    <input type="text" id="cp" name="cp" class="form-control" placeholder="Codigo postal" onkeypress="" value="{{ cliente.cp }}"/>
                                    <!--<div id="error9" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="estado">*Estado:</label>
                                    <select class="form-control" name="estado" id="estado">
                                        <option value="">-- Seleccione --</option>
                                        {% for estado in estados %}
                                            {% if cliente.id_estado == estado.id_estado %}
                                                <option value="{{ estado.id_estado }}" selected>{{ estado.estado }}</option>
                                            {% else %}
                                                <option value="{{ estado.id_estado }}">{{ estado.estado }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    <!--<div id="error10" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                            <td>
                                <div class="form-group" id="municipios">
                                    <label for="municipio">*Delegacion/municipio:</label>
                                    <select class="form-control" name="municipio" id="municipio">
                                        <option value="">-- Seleccione --</option>
                                        {% for municipio in municipios %}
                                            {% if cliente.id_municipio == municipio.id_municipio %}
                                                <option value="{{ municipio.id_municipio }}" selected>{{ municipio.municipio }}</option>
                                            {% else %}
                                                <option value="{{ municipio.id_municipio }}">{{ municipio.municipio }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    <!--<div id="error11" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group" id="colonias">
                                    <label for="colonia">*Colonia:</label>
                                    <select class="form-control" name="colonia" id="colonia" data-colonia="{{ cliente.id_colonia }}">
                                        <option value="">-- Seleccione --</option>
                                        {% for colonia in colonias %}
                                            {% if cliente.id_colonia == colonia.id_colonia %}
                                                <option value="{{ colonia.id_colonia }}" selected>{{ colonia.colonia }}</option>
                                            {% else %}
                                                <option value="{{ colonia.id_colonia }}">{{ colonia.colonia }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                </div>
                                <!--<div id="error12" style="margin-top:-15px;" hidden>Campo requerido</div>-->
                            </td>
                            <td>
                                <div class="form-group">
                                    <label for="ciudad">Ciudad:</label>
                                    <input type="text" id="ciudad" name="ciudad" class="form-control" placeholder="Ciudad" value="{{ cliente.ciudad }}"/>
                                    <!--<div id="error13" hidden>Campo requerido</div>-->
                                </div>
                            </td>
                        </tr>
                    </table>
                    {% endfor %}
                    <div class="form-group" align="center">
                        <button type="button" id="Guardar" class="btn btn-block btn-raised btn-primary"><span class="fa fa-floppy-o"></span><span class="hidden-xs"> Guardar</span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/app_js/Catalogos_ModificarEmisor.js') }}"></script>
{% endblock %}