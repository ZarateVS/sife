{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
    {% for cat in menu if cat.mnu_url == "Colonia" %}
        {% if cat.rol_insert == 1 %}
            <div class="panel panel-primary">
                <div class="panel-heading" style="background: #3c8dbc">
                    <h2 align="center" style="color: white;">Nueva Colonia</h2>
                </div>
                <div class="panel-body">
                    <br>
                    <form id="frmColonia" class="col-lg-6 col-lg-offset-3">
                        <div class="btn-group btn-group-justified btn-group-raised">
                            <a href="{{ path('Colonia') }}" class="btn btn-raised btn-primary"><span class="fa fa-arrow-circle-left"></span><span class="hidden-xs"> Regresar</span></a>
                            <a id="Limpiar" class="btn btn-raised btn-primary"><span class="glyphicon glyphicon-erase"></span><span class="hidden-xs"> Limpiar</span></a>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="estado">*ESTADO:</label>
                            <select class="selectpicker form-control" name="estado" id="estado" data-live-search="true">
                                <option value="">-- Seleccione --</option>
                                {% for estado in estados %}
                                    <option value="{{ estado.id_estado }}">{{ estado.estado }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="municipio">*MUNICIPIO:</label>
                            <select class="selectpicker form-control" name="municipio" id="municipio" data-live-search="true">
                                <option value="">-- Seleccione --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="nombre">*NOMBRE:</label>
                            <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre" maxlength=""/>
                        </div>

                        <div class="form-group">
                            <label for="cp">*CÓDIGO POSTAL:</label>
                            <input type="text" id="cp" name="cp" class="form-control" placeholder="Código Postal" maxlength="" onkeypress="return soloNumeros(event);"/>
                        </div>

                        <div class="form-group">
                            <label for="cd">CIUDAD:</label>
                            <input type="text" id="cd" name="cd" class="form-control" placeholder="Ciudad" maxlength=""/>
                        </div>
                        <br>
                        <div class="form-group" align="center">
                            <button type="button" id="Guardar" class="btn btn-block btn-raised btn-primary"><span class="fa fa-floppy-o"></span><span class="hidden-xs"> Guardar</span></button>
                        </div>
                    </form>
                </div>
            </div>
        {% else %}
            {% include 'FacelecBundle:Default:Alerta1.html.twig' %}
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/app_js/Catalogos_AgregarColonia.js') }}"></script>
{% endblock %}