{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
    {% for cat in menu if cat.mnu_url == "Sucursal" %}
        {% if cat.rol_insert == 1 %}
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: rgba(30, 51, 66, 0.9);">
                <h2 align="center" style="color: white;">Catálogo Sucursales</h2>
            </div>
            <div class="panel-body">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="btn-group btn-group-justified btn-group-raised">
                        <a href="{{ path('Sucursal') }}" class="btn btn-raised btn-primary"><span class="fa fa-arrow-circle-left"></span><span class="hidden-xs"> Regresar</span></a>
                        <a id="Limpiar" class="btn btn-raised btn-primary"><span class="glyphicon glyphicon-erase"></span><span class="hidden-xs"> Limpiar</span></a>
                    </div>
                </div>
                <br> <br> <br>
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 style="color: white;" align="center" class="panel-title">Nueva Sucursal</h3>
                        </div>
                        <div class="panel-body">
                            <form id="frmSucursal">
                                <div class="form-group">
                                    <label for="rs">Razón social:</label>
                                    <select id="rs" name="rs" class="form-control selectpicker" data-live-search="true">
                                        <option value="">-- Seleccione --</option>
                                        {% for cliente in clientes %}
                                            <option value="{{ cliente.id_cliente }}">{{ cliente.razonsocial }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="sucursal">No. sucursal:</label>
                                    <input type="text" id="sucursal" name="sucursal" class="form-control" placeholder="Número de sucursal" onkeypress="return cambiarMinusculas(this);" onchange="Mayusculas(this);">
                                </div>

                                <div class="form-group">
                                    <label for="nombre">Nombre:</label>
                                    <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre"/>
                                </div>

                                <div class="form-group">
                                    <label for="tipo">Tipo:</label>
                                    <select id="tipo" name="tipo" class="form-control selectpicker">
                                        <option value="">-- Seleccione --</option>
                                        <option value="F">Farmacia</option>
                                        <option value="L">Laboratorio</option>
                                    </select>
                                </div>

                                <label for="apertura">Apertura:</label>
                                <div class="form-group">
                                    <div class="input-group date" data-provide="datepicker">
                                        <input type="text" id="apertura" name="apertura" class="form-control" placeholder="aaaa-mm-dd" style="cursor: pointer;" readonly/>
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="container-fluid text-center">
                                    <button type="button" id="Guardar" style="color: white;" class="btn btn-default btn-raised btn-success"><span class="fa fa-floppy-o"></span><span class="hidden-xs"> Guardar</span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('public/js/app_js/Catalogos_AgregarSucursal.js') }}"></script>
{% endblock %}